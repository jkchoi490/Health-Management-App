<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


            <ImageButton
                android:id="@+id/imageButtonChart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:textSize="16sp"
                app:srcCompat="@drawable/chart"
                tools:ignore="MissingConstraints"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButtonChart"
                android:layout_centerInParent="true"
                android:text="영양성분"
                android:textColor="@android:color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButtonFood"
                android:layout_width="101dp"
                android:layout_height="100dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/food" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonFood"
                android:layout_centerInParent="true"
                android:text="식단관리"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


            <ImageButton
                android:id="@+id/imageButtonJogging"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/jogging" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonJogging"
                android:layout_centerInParent="true"
                android:text="운동관리"
                android:textColor="@android:color/black" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


            <ImageButton
                android:id="@+id/imageButtonManage"
                android:layout_width="108dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:background="@null"
                app:srcCompat="@drawable/manage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonManage"
                android:layout_centerInParent="true"
                android:text="마이페이지"
                android:textColor="@android:color/black" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButtonCamera"
                android:layout_width="108dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:background="@null"
                app:srcCompat="@drawable/camera"
                android:layout_toRightOf="@id/imageButtonChart"
                android:layout_below="@id/imageButtonFood"
                tools:ignore="MissingConstraints,NotSibling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonCamera"
                android:layout_centerInParent="true"
                android:text="영양성분표 촬영"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButtonAnalyze"
                android:layout_width="108dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:background="@null"
                app:srcCompat="@drawable/analyze"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="229dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonAnalyze"
                android:layout_centerInParent="true"
                android:text="구매/분석한 식품들"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButtonCalandar"
                android:layout_width="108dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:background="@null"
                app:srcCompat="@drawable/calandar"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="229dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonCalandar"
                android:layout_centerInParent="true"
                android:text="나의 캘린더"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>




</RelativeLayout>

